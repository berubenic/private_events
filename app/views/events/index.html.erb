<h1>Events</h1>
<br>
<h3>Upcoming events:</h3>
<ul>
  <% if @upcoming_events.empty? %>
    <li>No upcoming events</li>
  <% else %>
    <% @upcoming_events.each do |event| %>
      <li><%= link_to "#{event.name}", event %></li>
    <% end %>
  <% end %>
</ul>
<br>
<br>
<h3>Past events:</h3>
<ul>
  <% if @past_events.empty? %>
    <li>No past events</li>
  <% else %>
    <% @past_events.each do |event| %>
      <li><%= link_to "#{event.name}", event %></li>
    <% end %>
  <% end %>
</ul>
