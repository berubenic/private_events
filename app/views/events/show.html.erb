<h1 class='title is-4 has-text-centered'><%= @event.name %></h1>
<h3 class='subtitle'>Hosted by: <%= @event.creator.name %></h3>
<br>
<h4>Attendees:</h4>
<ul>
  <% if @event.attendees.empty? %>
    <li>No attendees</li>
  <% else %>
    <% @event.attendees.each do |attendee| %>
      <li><%= attendee.name %></li>
    <% end %>
  <% end %>
</ul>
<br>
<% if session[:user_id] == @event.creator.id %>
  <h3>Send Invitations:</h3>
  <ul>
    <% if users_available_to_invite.empty? %>
      <li>No one is available</li>
    <% else %>
      <% users_available_to_invite.each do |user| %>
        <li><%= user.name %> <%= button_to 'Send Invitation', send_invite_path, params: { user: user.id, event: @event.id } %></li>
      <% end %>
    <% end %>
  </ul>
  <br>
  <h3>Pending Invitations:</h3>
  <ul>
    <% if @event.pending_attendees.empty? %>
      <li>No pending invitations</li>
    <% else %>
      <% @event.pending_attendees.each do |user| %>
        <li><%= user.name %></li>
      <% end %>
    <% end %>
  </ul>
  <br>
  <h3>Declined Invitations</h3>
  <ul>
    <% if @event.declined_attendees.empty? %>
      <li>No declined invitations</li>
    <% else %>
      <% @event.declined_attendees.each do |user| %>
        <li><%= user.name %></li>
      <% end %>
    <% end %>
  </ul>
<% end %>
