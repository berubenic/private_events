<h1><%= @event.name %></h1>
<h3>Created by: <%= @event.creator.name %></h3>
<br>
<h4>Attendees:</h4>
<ul>
  <% @event.attendees.each do |attendee| %>
    <li><%= attendee.name %></li>
  <% end %>
</ul>
<br>
<% if session[:user_id] == @event.creator.id %>
  <h3>Send Invitiations:</h3>
  <ul>
    <% @users.each do |user| %>
      <li><%= user.name %> <%= button_to 'Send Invitation', invite_path %></li>
    <% end %>
  </ul>
<% end %>
