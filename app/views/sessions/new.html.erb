<% if flash[:alert] %>
  <aside class='message is-warning' id='message'>
    <p class='message-header'>Notice</p>
    <p class='message-body'><%= flash[:alert] %></p>
  </aside>
<% end %>
<% if flash[:error]%>
  <aside class='message is-danger' id='message'>
    <p class='message-header'>Error</p>
    <p class='message-body'><%= flash[:error]%></p>
  </aside>
<% end %>
<% if flash[:success]%>
  <aside class='message is-success' id='message'>
    <p class='message-header'>Success</p>
    <p class='message-body'><%= flash[:success]%></p>
  </aside>
<% end %>
<div class='level'>
  <h2 class='title is-4 level-item is-centered'>Login</h2>
</div>
<%= render 'form' %>
<div class='has-text-centered'>
  <p>No account? <%= link_to 'Sign Up here', signup_url %></p>
</div>
