<div class='box'>
  <h3 class='subtitle'>Declined invites</h3>
  <% if @user.declined_events.empty? %>
    <p>You have no declined invites</p>
  <% else %>
    <table class='table is-fullwidth'>
      <thead>
        <th>Event name</th>
        <th>Host</th>
        <th>Date</th>
      </thead>
      <tbody >
        <% @user.declined_events.each do |event|%>
          <tr>
            <%= render 'events/short_tb_display', event: event %>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>
