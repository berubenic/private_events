<div class='box'>
  <h3 class='subtitle'>Upcoming events:</h3>
  <% if @upcoming_events.empty? %>
    <p>You have no events</p>
  <% else %>
    <table class='table is-fullwidth'>
      <thead>
        <th>Event name</th>
        <th>Host</th>
        <th>Date</th>
      </thead>
      <tbody >
        <% @upcoming_events.each do |event| %>
          <tr>
            <%= render 'events/short_tb_display', event: event %>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>
